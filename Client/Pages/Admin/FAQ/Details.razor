@page "/admin/faq/details/{CourseId:int}/{AboutId:int}/{Id:int}"

<table class="table">
    <tr>
        <td>Question</td>
        <td>@Model.Question</td>
    </tr>
    <tr>
        <td>Answer</td>
        <td>@Model.Answer</td>
    </tr>
</table>

@code {
    [Parameter]
    public int CourseId { get; set; }

    [Parameter]
    public int AboutId { get; set; }

    [Parameter]
    public int Id { get; set; }

    [Inject]
    public IFAQRepository? _faqRepository { get; set; }

    public FAQDto? Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await _faqRepository.GetFAQById(CourseId, AboutId, Id);
    }
}
